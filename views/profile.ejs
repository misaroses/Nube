<!DOCTYPE html>
<html>
<head>
	<title>Tiff</title>
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<link rel="stylesheet" href="assets/estilos.css">
	<script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous"></script>
	<script src="todo-list.js" type="text/javascript"></script>
</head>
<body>

<% include nav.ejs %>

<div class="container">
	<div class="bs-docs-section">

	<div class="row">

		<div class="col-lg-12"><br>
			
			<div class="btn-group btn-group-toggle" data-toggle="buttons">
				  <label class="btn btn-primary">
				    <input type="checkbox" autocomplete="off"> <
				  </label>
				  <label class="btn btn-primary">
				    <input type="checkbox" autocomplete="off"> >
				  </label>
			</div>
			<button class="btn btn-primary" ><ion-icon name="refresh"></ion-icon></button>
			<button class="btn btn-primary" ><ion-icon name="home"></ion-icon></button>
			<input class="form-control-plaintext" style="float:right;width: 54%;" placeholder="Ruta..." type="text" value="">
			<p style="float:right;padding-right:10px;">../</p>

			<br><br>
			<table class="table table-hover">


				<tr>
					<th>Nombre</th>
					<th>Peso</th>
					<th></th>
				</tr>
					<% for(var i=0; i < Object.keys(file).length; i++) { %>
			   		<tr>
	     				<td><ion-icon name="<%= detectType(file[i].tipo) %>"></ion-icon> <%= file[i].nombre %></td>

	     				<td><%= file[i].peso.toFixed(2) %> MB</td>

	     				<td style="text-align: right;">

							<form style="display: inline-block;">
								<input type="checkbox"  name="">		
							</form>

	     				</td>
	   				</tr>
					<% } %>
			</table>
		</div>

	</div>
		<div class="container">

			<div class="jumbotron" style="margin-top: 20px;">
				<h1 class="display-10">Agregar item</h1>

				<form id="add">
				  	<input name="add" type="text"><br><br>  
				  	<button class="btn btn-primary btn-lg">Add item</button><br><br>
				</form>

				  <ul>
				  	<% for(var i=0; i < data.length; i++){ %>
				  		<li><%= data[i].add %></li>
				  	<% } %>
				  </ul>
			</div>
				
		</div>
</div>
</div>

<script src="https://unpkg.com/ionicons@4.2.6/dist/ionicons.js"></script>
</body>
</html>